Import('project_env')

#######################################################
# Create host build environment
#######################################################
build_dir = project_env['build_dir'] + '/host'
install_basedir = project_env['install_basedir'] + '/host'

env = project_env.Clone(
    tools = [ 'default' ],
    build_dir = build_dir,
    install_basedir = install_basedir,
    install_bindir = '$install_basedir/tools',
    required = {},
    native_build = True
)

#######################################################
# Setup host toolchain options
#######################################################
SConscript('tool_options/SConscript.tool_options', exports = ['env'])

#######################################################
# Setup host coverage options
#######################################################
env['COVERAGE'] = False

Return('env')
